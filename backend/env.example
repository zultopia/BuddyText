# Environment variables for BuddyText Backend
# Copy this file to .env and update the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Model Configuration
MODEL_NAME=microsoft/DialoGPT-medium
MODEL_CACHE_DIR=./models
MAX_LENGTH=500
TEMPERATURE=0.7

# Database (if needed)
DATABASE_URL=sqlite:///./buddytext.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/buddytext.log

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Text Processing
DEFAULT_LANGUAGE=id
DEFAULT_SIMPLIFICATION_LEVEL=simple

# Evaluation Metrics
ENABLE_READABILITY_METRICS=True
DEFAULT_METRICS=["flesch_kincaid", "dale_chall", "smog"]
